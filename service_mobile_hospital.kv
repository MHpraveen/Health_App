<MobileCareService>
    name:'mobile_hospital_content'
    BoxLayout:
        orientation: 'vertical'
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release: root.manager.pop()
        MDLabel:
            text: "Mobile-Hospital "
            font_name: "Broboto"
            pos_hint: {"center_y": .95}
            size_hint_y:.01
            font_size: "20sp"
            halign:'center'
        ScrollView:
            do_scroll_y:False
            GridLayout:
                id: grid
                cols: 1
                padding: dp(10)
                spacing: dp(20)
                size_hint_y: None
                height: self.minimum_height
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height


                    MDTextField:
                        id:extra_info
                        hint_text: "Vehicle no"
            #                        required: True
                        font_name: "Roboto"
                        font_size: "14sp"
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        write_tab: False
                        height: "30dp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
                    MDTextField:
                        id:extra_info2
                        hint_text: "Model Year"
            #                        required: True
                        font_name: "Roboto"
                        font_size: "14sp"
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        write_tab: False
                        height: "30dp"
                        multiline: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.4
                        on_focus: if self.focus: root.show_date_picker(self)
                    MDTextField:
                        id: State
                        hint_text: "State"
                        pos_hint: {'center_x': 0.5}
                        font_size: "14sp"
                        size_hint:.7,None
                        cursor_width: "2sp"
                        write_tab: False
                        theme_text_color: "Custom"
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
                    MDTextField:
                        id: District
                        hint_text: "District"
                        pos_hint: {'center_x': 0.5}
                        font_size: "14sp"
                        size_hint:.7,None
                        cursor_width: "2sp"
                        write_tab: False
                        theme_text_color: "Custom"
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
                    MDTextField:
                        id:pincode
                        hint_text: "PIN Code"
            #                        required: True
                        font_name: "Roboto"
                        font_size: "14sp"
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        height: "30dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
                    MDTextField:
                        id:address
                        hint_text: "Address"
            #                        required: True
                        font_name: "Roboto"
                        font_size: "14sp"
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        height: "30dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
                    MDBoxLayout:
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        height: "30dp"
                        orientation: 'vertical'
                        MDLabel:
                            text:'Upload Required Documents'
                            size_hint_y:.1
                            halign:'center'
                            font_size: "16sp"
                            font_name: "Broboto"
                    MDLabel:
                        id: Doc_1
                        text: "1.Vehicle RC"
                        font_name: "Roboto"
                        font_size: "16sp"
                        pos_hint: {"center_x": .5}
                        size_hint:.7,None
                        height: "20dp"
                    GridLayout:
                        id: grid
                        cols: 2
                        padding: dp(10)
                        spacing: dp(20)
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        height: "20dp"
                        MDLabel:
                            id: file_path
                            text: "None selected "  # Initial text when no file is selected
                            italic: True
                            color: 0.5, 0.5, 0.5, 1
                            pos_hint: {"center_x": .5,'center_y':.5}
                        MDTextButton:
                            id:upload1
                            text:'Upload'
                            font_name: "Roboto"
                            font_size: "16sp"
                            color:1, 0, 0, 1
                            pos_hint: {"center_x": .5,'center_y':.5}
                            on_release: root.file_manager_open('file_path')
                    MDLabel:
                        id: Doc_2
                        text: "2.Driving License"
                        font_name: "Roboto"
                        font_size: "16sp"
                        size_hint:.7,None
                        height: "40dp"
                        pos_hint: {"center_x": .5,'center_y':.5}
                    GridLayout:
                        id: grid
                        cols: 2
                        padding: dp(10)
                        spacing: dp(20)
                        pos_hint: {"center_x": .5}
                        size_hint:.7,None
                        height: "20dp"
                        MDLabel:
                            id: file_path2
                            text: "None selected 2"  # Initial text when no file is selected
                            italic: True
                            color: 0.5, 0.5, 0.5, 1
                            pos_hint: {"center_x": .5,'center_y':.5}
                        MDTextButton:
                            id:upload1
                            text:'Upload'
                            font_name: "Roboto"
                            font_size: "16sp"
                            color:1, 0, 0, 1
                            pos_hint: {"center_x": .5,'center_y':.5}
                            on_release: root.file_manager_open('file_path')
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(60)
            padding: dp(10)
            spacing: dp(10)
            MDFlatButton:
                disabled: False
                size_hint: .4, None
                height:dp(40) # Adjusted size
                pos_hint:{'center_x':.5,'center_y':.5}
                md_bg_color: 1, 0, 0, 1
                elevation: 10
                text: "CONFIRM"
                font_name: "Broboto"
                halign: "center"
                text_color: 1, 1, 1, 1
                theme_text_color: "Custom"