        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: dp(20)
            spacing: dp(10)
             # next button
            MDFlatButton:
                disabled: False
                size_hint: None, None
                size: dp(110), dp(35) # Adjusted size
                halign: "left"
                pos_hint: {'right': 1, 'y': 0}
                md_bg_color: 0, 0, 0, 0
                on_release: root.manager.push("services_list")
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, dp(30))
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0
                    MDLabel:
                        text: "Preview"
                        font_name: "Broboto"
                        halign: "center"
                        text_color: 1, 0, 0, 1
                        theme_text_color: "Custom"
                    MDIcon:
                        icon: "arrow-right-bold"
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: 1, 0, 0, 1
                        size_hint_x: None
                        width: dp(24)

<HorizontalLineWidget>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1  # Set the color of the line (Blue in this example)
        Line:
            points: self.x, self.center_y, self.right, self.center_y  # Define the coordinates of the line