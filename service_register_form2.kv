<ServiceRegisterForm2>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                id: grid
                cols: 1
                padding: dp(10)
                spacing: dp(20)
                size_hint_y: None
                height: self.minimum_height

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: self.minimum_height

                    MDIconButton:
                        icon: "arrow-left"
                        pos_hint: {"center_y": .8}
                        user_font_size: "30sp"
                        theme_text_color: "Custom"
                        text_color: rgba(26, 24, 58, 255)
                        on_release: root.manager.pop()
                    MDLabel:
                        text: "Select Service Provider Types"
                        font_name: "Roboto"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        pos_hint: {"center_y": .8}
                        font_style: "H6"
                        font_size: "18sp"
                        halign: "center"
                        valign: "middle"
                        size_hint_y: None
                        height: dp(30)
                        canvas.before:
                            Color:
                                rgba: 1, 0, 0, 1
                            Line:
                                points: self.x, self.y, self.x + self.width, self.y
                                width: 2
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        spacing:dp(10)
                        size_hint:.7,None
                        height: "30dp"
#                        MDCheckbox:
#                            id:hospital_manager
#                            size_hint: None, None
#                            size: dp(48), dp(48)
#                            color_active: "red"
#                            pos_hint: { 'center_y': .5}
#                            on_active: root.on_checkbox_active(hospital_manager,'Hospital',add_hospital_button)

                        MDFlatButton:
                            id: add_hospital_button
                            size_hint: None, None
                            pos_hint: { 'center_y': .5}
                            spacing:0
                            padding:0
                            disabled: False
                            on_release: root.manager.push("service_hospital")
                            BoxLayout:
                                orientation: 'horizontal'
                                spacing:0
                                padding:0
                                MDIcon:
                                    id: plus_icon_h
                                    icon: "plus"
                                    theme_text_color: "Custom"
                                    text_color: 1, 0, 0, 1
                                    size_hint_x: None
                                    width: dp(24)
                                MDLabel:
                                    id: add_text_h
                                    text: "Add"
                                    font_name: "Roboto"
                                    font_size:'16sp'
                                    text_color: 1, 0, 0, 1
                                    theme_text_color: "Custom"

                        MDLabel:
                            text: 'Oxy-Clinic'
                            font_size:'16sp'
                            font_name: "Roboto"

                        MDCard:
                            orientation: 'horizontal'
                            size_hint: (0.5,0.8)
                            elevation: 2
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            BoxLayout:
                                orientation: 'vertical'
#                                size_hint: (0.5, 1)
                                padding: dp(2)
                                MDLabel:
                                    id:hospitals_added
                                    text: '0'
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    halign: "center"
                                    font_size:'16sp'
                                    font_name: "Roboto"

                    Widget:  # Spacer widget for gap
                        size_hint_y: None
                        height: dp(20)

                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        spacing:dp(10)
                        size_hint:.7,None
                        height: "30dp"

                        MDFlatButton:
                            id: add_mobile_hospital_button
                            size_hint: None, None
                            pos_hint: { 'center_y': .5}
                            spacing:0
                            padding:0
                            disabled: False
                            on_release: root.manager.push("service_mobile_hospital")
                            BoxLayout:
                                orientation: 'horizontal'
                                spacing:0
                                padding:0
                                MDIcon:
                                    id: plus_icon_h
                                    icon: "plus"
                                    theme_text_color: "Custom"
                                    text_color: 1, 0, 0, 1
                                    size_hint_x: None
                                    width: dp(24)
                                MDLabel:
                                    id: add_text_h
                                    text: "Add"
                                    font_name: "Roboto"
                                    font_size:'16sp'
                                    text_color: 1, 0, 0, 1
                                    theme_text_color: "Custom"

                        MDLabel:
                            text: 'Oxy-Wheel'
                            font_size:'16sp'
                            font_name: "Roboto"

                        MDCard:
                            orientation: 'horizontal'
                            size_hint: (0.5,0.8)
                            elevation: 2
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            BoxLayout:
                                orientation: 'vertical'
#                                size_hint: (0.5, 1)
                                padding: dp(2)
                                MDLabel:
                                    id:hospitals_added
                                    text: '0'
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    halign: "center"
                                    font_size:'16sp'
                                    font_name: "Roboto"

                    Widget:  # Spacer widget for gap
                        size_hint_y: None
                        height: dp(20)

                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        spacing:dp(10)
                        size_hint:.7,None
                        height: "30dp"

                        MDFlatButton:
                            id: add_oxigym_button
                            size_hint: None, None
                            pos_hint: { 'center_y': .5}
                            spacing:0
                            padding:0
                            disabled: False
                            on_release: root.manager.push("service_oxygym")
                            BoxLayout:
                                orientation: 'horizontal'
                                spacing:0
                                padding:0
                                MDIcon:
                                    id: plus_icon_h
                                    icon: "plus"
                                    theme_text_color: "Custom"
                                    text_color: 1, 0, 0, 1
                                    size_hint_x: None
                                    width: dp(24)
                                MDLabel:
                                    id: add_text_h
                                    text: "Add"
                                    font_name: "Roboto"
                                    font_size:'16sp'
                                    text_color: 1, 0, 0, 1
                                    theme_text_color: "Custom"

                        MDLabel:
                            text: 'Oxy-Gym'
                            font_size:'16sp'
                            font_name: "Roboto"

                        MDCard:
                            orientation: 'horizontal'
                            size_hint: (0.5,0.8)
                            elevation: 2
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            BoxLayout:
                                orientation: 'vertical'
#                                size_hint: (0.5, 1)
                                padding: dp(2)
