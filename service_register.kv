<HorizontalLineWidget>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1  # Set the color of the line (Blue in this example)
        Line:
            points: self.x, self.center_y, self.right, self.center_y  # Define the coordinates of the line

<ServiceRegisterForm>
    name:'service_register'
    BoxLayout:
        orientation: 'vertical'

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "signup"
        MDLabel:
            text: "Create new account"
            font_name: "Broboto"
            pos_hint: {"center_x":.6,"center_y": .95}
            size_hint_y:.1
            font_size: "18sp"
        ScrollView:
            GridLayout:
                id: grid
                cols: 1
                padding: dp(10)
                spacing: dp(20)
                size_hint_y: None
                height: self.minimum_height
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    MDTextField:
                        id: service_provider_name
#                        required: True
                        hint_text: 'Name'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        height: "25dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5


                    MDTextField:
                        id:service_provider_email
                        hint_text: "Email"
#                        required: True
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5

                    MDFloatLayout:
                        size_hint:.9,None
                        height: "60dp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDTextField:
                            id:service_provider_password
                            hint_text: "Password"
                            font_name:"Roboto"
                            helper_text:''
                            helper_text_mode:  'on_error'
                            #required: True
                            pos_hint: {"center_x": .5, "center_y": .5}
                            cursor_width: "2sp"
                            multiline: False
                            keyboard_suggestions: True
                            password: not show_password_button.active
                            write_tab: False
                            line_color_focus: [75/255, 75/255, 75/255, 1]
                            hint_text_color_focus: [75/255, 75/255, 75/255, 1]
                            canvas.before:
                                Color:
                                    rgba: [75/255, 75/255, 75/255, 1]
                        MDIconButton:
                            id: show_password_button
                            pos_hint: {"center_x": .9, "center_y": .5}
                            active: False  # Initial state is password hidden
                            text_color: [0, 0, 0, 1]
                            opposite_colors: True
                            background_palette: "Grey"
                            background_hue: "500"
                            elevation_normal: 10
                            on_release:
                                self.active = not self.active
                                service_provider_password.password = not self.active
                            Image:
                                source: "images/eye-off.png" if not show_password_button.active else "images/eye.png"

                    MDTextField:
                        id:service_provider_phoneno
                        hint_text: "Phone No"
#                       required: True
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        height: "30dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5

                    MDTextField:
                        id:service_provider_address
                        hint_text: "Address"
#                        required: True
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        height: "30dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        height: "30dp"
                        MDLabel:
                            pos_hint:{'center_x':.5}
                            text: 'Select service provider types.'
                            font_size:'18sp'
                            font_name: "Roboto"
                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        spacing:dp(10)
                        size_hint:.9,None
                        height: "60dp"
                        MDCheckbox:
                            id:hospital_manager
                            size_hint: None, None
                            size: dp(48), dp(48)
                            color_active: "red"
                            pos_hint: { 'center_y': .5}
                            on_active: root.on_checkbox_active(hospital_manager,'Hospital',add_hospital_button)

                        MDLabel:
                            text: 'Hospital'
                            font_size:'16sp'
                            font_name: "Roboto"
                        MDTextButton:
                            id:hospital_list_button
                            text:'View'
                            font_size:'14sp'
                            font_name: "Roboto"
                            pos_hint: { 'center_y': .5}
                            color:1, 0, 0, 1
                            disabled: True
                            on_release:root.show_branch_dialog('Hospital List',add_hospital_button)


                        MDTextButton:
                            id: add_hospital_button
                            text:'Add'
                            font_size:'14sp'
                            font_name: "Roboto"
                            pos_hint: { 'center_y': .5}
                            color:1, 0, 0, 1
                            disabled: True  # Initially disabled
                            on_release:root.show_branch_dialog('Hospital',hospital_list_button)

                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        height: "60dp"
                        spacing:dp(10)
                        MDCheckbox:
                            id:mobile_hospital_manager
                            size_hint: None, None
                            size: dp(48), dp(48)
                            color_active: "red"
                            pos_hint: { 'center_y': .5}
                            on_active: root.on_checkbox_active(mobile_hospital_manager,'Mobile-Hospital',add_mobile_hospital_button)
                        MDLabel:
                            text: 'Mobile-Hospital'
                            font_size:'16sp'
                            font_name: "Roboto"

                        MDTextButton:
                            id:mobile_hospital_list_button
                            text:'View'
                            font_size:'14sp'
                            font_name: "Roboto"
                            pos_hint: { 'center_y': .5}
                            color:1, 0, 0, 1
                            #disabled: True
                            on_release:root.show_branch_dialog('Mobile-Hospital List',add_mobile_hospital_button)

                        MDTextButton:
                            id: add_mobile_hospital_button
                            text:'Add'
                            font_size:'14sp'
                            font_name: "Roboto"
                            pos_hint: { 'center_y': .5}
                            color:1, 0, 0, 1
                            disabled: True
#                            icon: "plus"
#                            type:'small'
#                            md_bg_color: 1, 0, 0, 1
#                            pos_hint: { 'center_y': .5}
#                            disabled: True  # Initially disabled
#                            size_hint: None, None
#                            size: dp(48), dp(48)
#                            icon_size:'16sp'
                            on_release:root.show_branch_dialog('Mobile-Hospital',mobile_hospital_list_button)
                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        height: "60dp"
                        spacing:dp(10)
                        MDCheckbox:
                            id:oxigym_manager
                            size_hint: None, None
                            size: dp(48), dp(48)
                            color_active: "red"
                            pos_hint: { 'center_y': .5}
                            on_active: root.on_checkbox_active(oxigym_manager,'Oxi-Gym',add_oxigym_button)
                        MDLabel:
                            text: 'Oxi-Gym'
                            font_size:'16sp'
                            font_name: "Roboto"
                        MDTextButton:
                            id:oxigym_list_button
                            text:'View'
                            font_size:'14sp'
                            font_name: "Roboto"
                            pos_hint: { 'center_y': .5}
                            color:1, 0, 0, 1
                            disabled: True
                            on_release:root.show_branch_dialog('Oxi-Gym List',add_oxigym_button)
                        MDTextButton:
                            id: add_oxigym_button
                            text:'Add'
                            font_size:'14sp'
                            font_name: "Roboto"
                            pos_hint: { 'center_y': .5}
                            color:1, 0, 0, 1
                            disabled: True
                            on_release:root.show_branch_dialog('Oxi-Gym',oxigym_list_button)
                    MDLabel:
                        id:hint_label
                        text: ''
                        font_size:'14sp'
                        font_name: "Roboto"
                        halign:'center'
                        color:1, 0, 0, 1
                    BoxLayout:
                        orientation: 'horizontal'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.9,None
                        height: "20dp"

                        HorizontalLineWidget:
                            size_hint:.9,None
                            pos_hint:{'center_y':.5}
#
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: dp(20)
                        spacing: dp(10)
                        # signup button
                    Button:
                        id: service_register
                        text: "REGISTER"
                        size_hint: .7,None
                        height:dp(40)
                        pos_hint: {"center_x": .5, "center_y": .34}
                        background_color: 0, 0, 0, 0
                        font_name: "Roboto"
                        on_release:root.register_validation()
                        canvas.before:
                            Color:
                                rgb: rgba(255, 0, 0, 255)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [5]
