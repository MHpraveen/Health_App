<ServiceRegisterForm1>
    BoxLayout:
        orientation: 'vertical'
        Widget:
            size_hint_y:.01
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release: root.on_back_button()
        MDLabel:
            text: "Create new account"
            font_name: "Roboto-Bold"
            pos_hint: {"center_x":.6,"center_y": .95}
            size_hint_y:.1
            font_size: "18sp"
        ScrollView:
            GridLayout:
                id: grid
                cols: 1
                padding: dp(10)
                spacing: dp(20)
                size_hint_y: None
                height: self.minimum_height
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    MDTextField:
                        id: service_provider_name
                        hint_text: 'Full Name'
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        height: "30dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
#                        on_text: root.on_name_change(*args)

                    MDTextField:
                        id:service_provider_email
                        hint_text: "Email"
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        height: "30dp"
                        size_hint:.7,None
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
#                        on_text: root.on_email_change(*args)

                    MDFloatLayout:
                        size_hint:.7,None
                        height: "60dp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDTextField:
                            id:service_provider_password
                            hint_text: "Password"
                            font_name:"Roboto"
                            helper_text:''
                            helper_text_mode:  'on_error'
                            pos_hint: {"center_x": .5, "center_y": .5}
                            cursor_width: "2sp"
                            multiline: False
                            keyboard_suggestions: True
                            password: not show_password_button.active
                            write_tab: False
                            line_color_focus: [75/255, 75/255, 75/255, 1]
                            hint_text_color_focus: [75/255, 75/255, 75/255, 1]
                            on_text:root.on_password_change(*args)
                            canvas.before:
                                Color:
                                    rgba: [75/255, 75/255, 75/255, 1]
                        MDIconButton:
                            id: show_password_button
                            pos_hint: {"center_x": .9, "center_y": .5}
                            active: False
                            text_color: [0, 0, 0, 1]
                            opposite_colors: True
                            background_palette: "Grey"
                            background_hue: "500"
                            elevation_normal: 10
                            on_release:
                                self.active = not self.active
                                service_provider_password.password = not self.active
                            Image:
                                source: "images/eye-off.png" if not show_password_button.active else "images/eye.png"

                    MDTextField:
                        id:service_provider_phoneno
                        hint_text: "Phone No"
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        height: "30dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        input_type: "number"
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
                        input_filter:'int'
#                        on_text: root.on_phoneno_change(*args)

                    MDTextField:
                        id:service_provider_address
                        hint_text: "Address"
                        font_name: "Roboto"
                        pos_hint:{'center_x':.5}
                        size_hint:.7,None
                        height: "30dp"
                        multiline: False
                        write_tab: False
                        color_mode: 'custom'
                        line_color_focus: 0, 0, 0, 1
                        text_color_focus:0,0,0,1
                        hint_text_color:0,0,0,1
                        hint_text_color_focus:0,0,0,.5
#                        on_text: root.on_address_change(*args)

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: dp(20)
            spacing: dp(10)
            # next button
            MDFlatButton:
                id: next_button
                disabled: False
                size_hint: None, None
                size: dp(90), dp(35) # Adjusted size
                halign: "left"
                pos_hint: {'right': 1, 'y': 0}
                on_release: root.register_validation()
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0
                    MDLabel:
                        text: "Next"
                        font_name: "Roboto-Bold"
                        halign: "center"
                        text_color: 1, 0, 0, 1
                        theme_text_color: "Custom"
                    MDIcon:
                        icon: "arrow-right-bold"
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: 1, 0, 0, 1
                        size_hint_x: None
                        width: dp(24)