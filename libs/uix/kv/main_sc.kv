<MainScreen>:
    MDFloatLayout:
        md_bg_color: 1,1,0,1
        Image:
            source: 'images/Sign Up Page.png'
            allow_stretch: True
            keep_ratio: False
            pos: self.pos
            size: self.size
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
            on_release: root.manager.push("login")
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 0.9
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "SIGNUP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
            color: 0, 0, 0, 1
            on_release: root.manager.push("signup")
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
                Color:
                    rgb: rgba(255, 0, 0, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100




