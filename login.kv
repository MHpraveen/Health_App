MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDLabel:
            text: "W e l c o m e!"
#            font_name: "BPoppins"
            font_size: "23sp"
            pos_hint: {"center_x": .6,"center_y": .85}
            color: rgba(133, 28, 28, 255)
        MDLabel:
            text: "Sign in to continue"
#            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(135, 78, 78, 255)
        # Email input
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .63}
            TextInput:
#                id: login_email
                hint_text: "Email"
#                font_name: "MPoppins"
                size_hint_y: .75
                helper_text:'Required'
                helper_text_mode:  'on_error'
                required: True
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: rgba(178, 178, 178, 255)
        # Password input
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .5}
            TextInput:
#                id: login_password
                hint_text: "Password"
#                font_name: "MPoppins"
                size_hint_y: .75
                helper_text:'Required'
                helper_text_mode:  'on_error'
                required: True
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                password: True
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: rgba(178, 178, 178, 255)
        # Login button
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .34}
            background_color: 0, 0, 0, 0
#            font_name: "BPoppins"
#            on_release:
#                pass
            canvas.before:
                Color:
                    rgb: rgba(136, 8, 8, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        # Forgot password button
        MDTextButton:
            text: "Forgot Password?"
            pos_hint: {"center_x": .5, "center_y": .28}
            color: rgba(135, 78, 78, 255)
            font_size: "12sp"
#            font_name: "BPoppins"
        MDLabel:
            text: "or"
            color: rgba(136, 8, 8, 255)
            pos_hint: {"center_y": .22}
            font_size: "13sp"
#            font_name: "BPoppins"
            halign: "center"
        #lines
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .218}
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .218}
        #social media
        MDLabel:
            text: "Social Media Login"
#            font_name: "BPoppins"
            font_size: "13sp"
            halign: "center"
            pos_hint: {"center_y": .16}
            color: rgba(135, 78, 78, 255)
        # social media images
        MDGridLayout:
            cols: 3
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "center_y": .1}
            Image:
                source: "images/google.png"
            Image:
                source: "images/facebook.png"
            Image:
                source: "images/apple.png"
        # Sign up button
        MDLabel:
            text: "Don't have an account?"
#            font_name: "BPoppins"
            font_size: "11sp"
            pos_hint: {"center_x": .78, "center_y": .05}
            color: rgba(135, 78, 78, 255)
        MDTextButton:
            text: "Sign up"
#            font_name: "BPoppins"
            font_size: "11sp"
            pos_hint: {"center_x": .68, "center_y": .05}
            color: rgba(136, 8, 8, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
